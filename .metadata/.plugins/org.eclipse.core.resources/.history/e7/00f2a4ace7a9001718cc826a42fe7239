import java.util.Scanner;

public class challengedouble {
	public static void main(String [] args) {
		double x = 4;
		double y = 1;
		double c = 0;
		double pi = 0;
		System.out.println("Give the Gregory series a value \nIf n is entered, the sequences n\nto approximate pi will be listed\n \n \ninput:");
		System.out.print("");
		Scanner ns = new Scanner(System.in);
		double n = ns.nextDouble();
		//int n = (int)(Math.random() * 100000000)+20;
		double k = n;
		int count = 0;
		 double d = Math.PI;
		 double z = Math.abs( (d-n));//absolute value of difference of input and PI
		 double l = Math.abs((d+n));
		 int term = 0;
		 int g = 0;
		 double r = k;
		 
		 
			 
			 if (n > (4 - d)) {
				 count = 1;
			 }
			 
			 else if( n < (4-d)) {
				 while (n > 0) {
					 term++;
						
						if (k - n == 0) {
							c = y + 2*(k - n); //makes variable c into value of 3 + 2 times the difference of k and n.
							pi = pi +((x)/c);
							n--;
							count++;
						}
						
						else if((count) % 2 != 0) {
							c = y + 2*(k - n); //makes variable c into value of 3 + 2 times the difference of k and n.
							pi = pi - ((x)/c);
							n--;
							count++;
						}
						else if((count) % 2 == 0) {
							c = y + 2*(k - n); //makes variable c into value of 3 + 2 times the difference of k and n.
							pi = pi + ((x)/c);
							n--;
						count++;
						
					}
					
					}
					System.out.println(term);
				}
	}}
